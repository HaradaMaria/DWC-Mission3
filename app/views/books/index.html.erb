<h1>Books#index</h1>

<div class="container">
    <div class="row">
      <div class="col-4">
        <%= render 'side', users: @users %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-8">
        <h1>Book detail</h1>
        <% @books.each do |post_image| %>
        <div>
          <%= link_to book_path(book.id) do %>
            <%= image_tag book.get_book_image(100,100) %>
          <% end %>
          <p>ユーザーネーム：<%= book.user.name %></p>
          <p>ショップ名：<%= book.title %></p>
          <p>説明：<%= book.opinion %></p>
          
        </div>
        <% end %>
      </div>
    </div>
</div>

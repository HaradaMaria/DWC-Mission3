<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-dark bg-dark">
        <div class="container">
          <%= link_to root_path, class: "navbar-brand text-white",method: :get do %>
            Bookers2
          <% end %>
            <ul class="navbar-nav flex-row">
              <% if user_signed_in? %>
                <li class="nav-item ">
                  <%= link_to user_path(current_user.id), class: "text-white",method: :get do %>
                    <i class="fas fa-home"></i>Home
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to users_path, class: "text-white",method: :get do %>
                  <i class="fas fa-users"></i>Users
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to books_path, class: "text-white",method: :get do %>
                  <i class="fas fa-book-open"></i> Books
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: "text-white",method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i> Log out
                  <% end %>
                </li>
              <% else %>
  
                <li>
                 <%= link_to root_path, class: "text-white nav-link",method: :get do %>
                   <i class="fas fa-home"></i>Home
                  <% end %>
                </li>
                <li class="nav-item">
                 <%= link_to home_about_path, class: "text-white nav-link",method: :get do  %>
                   <i class="fas fa-link"></i>About
                 <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: "text-white nav-link",method: :get do %>
                    <i class="fas fa-user-plus"></i>Sign up
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_session_path, class: "text-white nav-link",method: :get do %>
                    <i class="fas fa-sign-in-alt"></i>Log in
                  <% end %>
                </li>
              <% end %>
            </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>

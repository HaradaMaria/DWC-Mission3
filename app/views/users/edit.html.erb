<h1>User info</h1>
<%= render 'books/error' %>
<%= form_with model: @user do |f| %>
  <h4>Name</h4>
   <%= f.text_field :name %>
  <h4>Image</h4>
    <%= f.file_field :image %>
  <h4>Introduction</h4>
   <%= f.text_area :introduction %>
   <%= f.submit 'Update User', class: "btn btn-secondary text-white" %>
<% end %>

<div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'books/side', users: @user %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <div>
            <table class="table ml-3 table-hover">
              <dif class="table-head">
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>opinion</th>
                </tr>
              </dif>
             <% @books.each do |book| %>
               <dif class="table-body">
                 <tr>
                   <td class="col-3">
                      <%= link_to user_path(@user.id), method: :get do %>
                        <%= image_tag @user.get_profile_image(100,100) %>
                      <% end %>
                   </td>
                   <td class="col-3 text-break"><%= link_to book.title, book_path(book.id) %></td>
                   <td class="col-5 text-break"><%= book.body %></td>
                 </tr>
               </dif>
              <% end %>
            </table>
        </div>
      </div>
    </div>
</div>